    body
        form(id="empEntryForm" action="/addEmp", method="POST")
            include ./shared/navigation.jade
            .main(id="main")
                h1(style="text-align: center;") Employee Entry 
                .data(id="empEntryModal")
                    .empid(class="form-group" style="text-align:center;")
                        label(class="col-sm-3 control-label" for='empid') Employee ID 
                        input(type='text', name='empid' id='empid' class="col-sm-3")

                    .empname(class="form-group" style="text-align:center;")
                        label(class="col-sm-3 control-label" for='fname') First Name 
                        input(type='text', name='fname' id='fname' class="col-sm-3")

                    .username(class="form-group" style="text-align:center;")
                        label(class="col-sm-3 control-label" for='username') User Name 
                        input(type='text', name='username' id='username' class="col-sm-3")

                    .place(class="form-group" style="text-align:center;")
                        label(class="col-sm-3 control-label" for='place') Place 
                        input(type='text', name='place' id='place' class="col-sm-3")

                    div(class="modal-footer")
                        input(class="btn btn-primary" type='submit', id='submit', value ='Submit')

                    table(id="table-form")
                        thead 
                            tr 
                                th Emp ID 
                                th Emp Name 
                                th User Name 
                                th Place 
                                th 

